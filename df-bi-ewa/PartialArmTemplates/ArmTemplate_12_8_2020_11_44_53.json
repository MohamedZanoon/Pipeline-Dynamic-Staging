{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "df-bi-ewa"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/Simple Copy Production Schema')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Copy From Table Source Schema",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"source": {
								"type": "OracleSource",
								"oracleReaderQuery": "SELECT cols.table_name, cols.column_name, cols.position, cons.status, cons.owner\nFROM all_constraints cons\nINNER JOIN all_cons_columns cols ON cons.constraint_name = cols.constraint_name AND\n                                    cons.owner = cols.owner\nWHERE cons.constraint_type = 'P'    \nORDER BY cols.table_name, cols.position;",
								"partitionOption": "None",
								"queryTimeout": "02:00:00"
							},
							"sink": {
								"type": "DelimitedTextSink",
								"storeSettings": {
									"type": "AzureBlobStorageWriteSettings"
								},
								"formatSettings": {
									"type": "DelimitedTextWriteSettings",
									"quoteAllText": true,
									"fileExtension": ".txt"
								}
							},
							"enableStaging": false
						},
						"inputs": [
							{
								"referenceName": "TableSourceSchemaProduction",
								"type": "DatasetReference"
							}
						],
						"outputs": [
							{
								"referenceName": "Staging",
								"type": "DatasetReference",
								"parameters": {
									"FileNameStaging": "TablePKs"
								}
							}
						]
					},
					{
						"name": "Copy From Table Source Schema To Destination",
						"type": "Copy",
						"dependsOn": [
							{
								"activity": "Copy From Table Source Schema",
								"dependencyConditions": [
									"Succeeded"
								]
							}
						],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"source": {
								"type": "DelimitedTextSource",
								"storeSettings": {
									"type": "AzureBlobStorageReadSettings",
									"recursive": true
								},
								"formatSettings": {
									"type": "DelimitedTextReadSettings"
								}
							},
							"sink": {
								"type": "SqlServerSink"
							},
							"enableStaging": false
						},
						"inputs": [
							{
								"referenceName": "Staging",
								"type": "DatasetReference",
								"parameters": {
									"FileNameStaging": "TablePKs"
								}
							}
						],
						"outputs": [
							{
								"referenceName": "DestinationProduction",
								"type": "DatasetReference",
								"parameters": {
									"TableNameDestination": "TablePKs",
									"TableSchemaDestination": "dbo"
								}
							}
						]
					}
				],
				"folder": {
					"name": "Production"
				},
				"annotations": []
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/Simple Copy Production')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Copy From Table Source Schema",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"source": {
								"type": "OracleSource",
								"oracleReaderQuery": "SELECT * FROM CLIENTES",
								"partitionOption": "None",
								"queryTimeout": "02:00:00"
							},
							"sink": {
								"type": "DelimitedTextSink",
								"storeSettings": {
									"type": "AzureBlobStorageWriteSettings"
								},
								"formatSettings": {
									"type": "DelimitedTextWriteSettings",
									"quoteAllText": true,
									"fileExtension": ".txt"
								}
							},
							"enableStaging": false
						},
						"inputs": [
							{
								"referenceName": "TableSourceSchemaProduction",
								"type": "DatasetReference"
							}
						],
						"outputs": [
							{
								"referenceName": "Staging",
								"type": "DatasetReference",
								"parameters": {
									"FileNameStaging": "tmpTable"
								}
							}
						]
					},
					{
						"name": "Copy From Table Source Schema To Destination",
						"type": "Copy",
						"dependsOn": [
							{
								"activity": "Copy From Table Source Schema",
								"dependencyConditions": [
									"Succeeded"
								]
							}
						],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"source": {
								"type": "DelimitedTextSource",
								"storeSettings": {
									"type": "AzureBlobStorageReadSettings",
									"recursive": true
								},
								"formatSettings": {
									"type": "DelimitedTextReadSettings"
								}
							},
							"sink": {
								"type": "SqlServerSink"
							},
							"enableStaging": false
						},
						"inputs": [
							{
								"referenceName": "Staging",
								"type": "DatasetReference",
								"parameters": {
									"FileNameStaging": "tmpTable"
								}
							}
						],
						"outputs": [
							{
								"referenceName": "DestinationProduction",
								"type": "DatasetReference",
								"parameters": {
									"TableNameDestination": "tmpClientes",
									"TableSchemaDestination": "dbo"
								}
							}
						]
					}
				],
				"folder": {
					"name": "Production"
				},
				"annotations": []
			},
			"dependsOn": []
		}
	]
}