												"value": {
													"value": "@item().ProcessGUID",
													"type": "Expression"
												},
												"type": "String"
											}
										}
									},
									"linkedServiceName": {
										"referenceName": "EWA_Staging",
										"type": "LinkedServiceReference"
									}
								},
