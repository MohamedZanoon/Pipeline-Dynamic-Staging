											{
												"name": "Generate Destination Table",
												"type": "SqlServerStoredProcedure",
												"dependsOn": [
													{
														"activity": "Copy From Table Source Schema To Destination",
														"dependencyConditions": [
															"Succeeded"
														]
													}
