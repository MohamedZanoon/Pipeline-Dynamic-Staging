												"inputs": [
													{
														"referenceName": "TableSourceSchema",
														"type": "DatasetReference"
													}
												],
												"outputs": [
													{
														"referenceName": "Staging",
														"type": "DatasetReference",
														"parameters": {
															"FileNameStaging": {
																"value": "@concat('SchemaSourceTable-',item().TableNameSource)",
