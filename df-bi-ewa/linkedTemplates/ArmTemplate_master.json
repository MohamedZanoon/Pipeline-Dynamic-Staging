{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "df-bi-ewa"
		},
		"CSS Production_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'CSS Production'"
		},
		"CSS_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'CSS'"
		},
		"DDI Production_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'DDI Production'"
		},
		"DDI_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'DDI'"
		},
		"EWA_Staging Production_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'EWA_Staging Production'"
		},
		"EWA_Staging_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'EWA_Staging'"
		},
		"Staging Account_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'Staging Account'"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "df-bi-ewa_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"Staging Account_connectionString": {
						"value": "[parameters('Staging Account_connectionString')]"
					},
					"CSS Production_connectionString": {
						"value": "[parameters('CSS Production_connectionString')]"
					},
					"CSS_connectionString": {
						"value": "[parameters('CSS_connectionString')]"
					},
					"DDI Production_connectionString": {
						"value": "[parameters('DDI Production_connectionString')]"
					},
					"DDI_connectionString": {
						"value": "[parameters('DDI_connectionString')]"
					},
					"EWA_Staging Production_connectionString": {
						"value": "[parameters('EWA_Staging Production_connectionString')]"
					},
					"EWA_Staging_connectionString": {
						"value": "[parameters('EWA_Staging_connectionString')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "df-bi-ewa_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'df-bi-ewa_ArmTemplate_0')]"
			]
		},
		{
			"name": "df-bi-ewa_ArmTemplate_2",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_2.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'df-bi-ewa_ArmTemplate_1')]"
			]
		}
	]
}